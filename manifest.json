{
  "manifest_version": 3,
  "name": "Declutter",
  "description": "Closes unnecessary browser tabs via a button or keyboard shortcut. Includes default rules and allows users to customize which tabs should be closed.",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Declutter Tabs"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "commands": {
    "declutter-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Close unnecessary tabs"
    }
  },

  "icons": {
    "16": "images/sun.png",
    "32": "images/sun(1).png",
    
    "128": "images/sun(2).png"
  }
  
}
